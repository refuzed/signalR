<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("signalR Tester", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                      @*  @Html.Partial("_LoginPartial")*@
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Timer", "Index", "Home")</li>
                            <li>@Html.ActionLink("Image1", "Image1", "Home")</li>
                            <li>@Html.ActionLink("Image2", "Image2", "Home")</li>
                            <li>@Html.ActionLink("Image3", "Image3", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body ">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    @*<a href="http://github.com/refuzed/signalR">http://github.com/refuzed/signalR</a>*@
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")

        @RenderSection("scripts", required: false)
    </body>
</html>
